<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ImageCollector" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/white</item>

        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black_22</item>

        <!-- colorSecondary : EditText 커서 색상 -->
        <item name="colorSecondary">@color/black_22</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Ripple 이펙트 색상 -->
        <item name="colorControlHighlight">@color/ripple_color</item>

        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>

        <!-- 텍스트 색상은 textAppearance를 따라가도록 null로 설정 -->
        <item name="android:textColor">@null</item>

        <!-- 폰트 패딩 제거 -->
        <item name="android:includeFontPadding">false</item>

        <item name="imageButtonStyle">@style/Widget.ImageCollector.ImageButton</item>
        <item name="editTextStyle">@style/Widget.ImageCollector.EditText</item>

        <item name="appBarLayoutStyle">@style/Widget.ImageSearcher.AppBarLayout</item>
        <item name="toolbarStyle">@style/Widget.ImageSearcher.Toolbar</item>
        <!-- ToolBar 좌상단 네비게이션 버튼 스타일 -->
        <item name="toolbarNavigationButtonStyle">@style/Widget.ImageSearcher.Toolbar.NavigationButton</item>
    </style>

    <style name="Widget.ImageCollector.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- https://pluu.github.io/blog/android/2016/10/31/editText-color/ -->
    <style name="Widget.ImageCollector.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black_22</item>

        <!-- API 21 이하 EditText 포커스 없을 때 하단 라인색 -->
        <item name="android:colorControlNormal">@android:color/transparent</item>
        <item name="colorControlNormal">@android:color/transparent</item>

        <!-- API 21 이상 EditText 하단 라인색 -->
        <item name="android:tint">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <!-- 탭 스타일 -->
    <style name="Widget.ImageCollector.TabLayout.MainTab" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="android:background">@null</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabMinWidth">0dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:gravity">bottom|center_horizontal</item>

        <item name="tabPaddingTop">11dp</item>
        <item name="tabPaddingBottom">11dp</item>

        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorColor">@color/black_22</item>

        <item name="tabTextColor">@color/grey_88</item>
        <item name="tabTextAppearance">@style/TextAppearance.ImageSearcher.TabLayout.MainTab</item>

        <item name="tabSelectedTextColor">@color/black_22</item>
        <item name="tabSelectedTextAppearance">@style/TextAppearance.ImageSearcher.TabLayout.MainTab.Selected</item>
    </style>

    <style name="Widget.ImageSearcher.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:maxHeight">70dp</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:background">@drawable/bg_toolbar</item>
        <item name="android:gravity">bottom</item>
    </style>

    <!-- 툴바 스타일 -->
    <style name="Widget.ImageSearcher.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@null</item>
        <item name="android:gravity">top</item>
        <item name="titleCentered">true</item>
        
<!--        <item name="titleMarginTop">11dp</item>-->
<!--        <item name="titleMarginBottom">11dp</item>-->
        <item name="titleMarginTop">30dp</item>
        <item name="titleMarginBottom">30dp</item>
        <item name="titleMarginStart">8dp</item>
        <item name="titleMarginEnd">38dp</item>

        <item name="android:minHeight">@null</item>
        <item name="maxButtonHeight">44dp</item>

        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>

        <item name="titleTextColor">@color/black_22</item>
        <item name="titleTextAppearance">@style/TextAppearance.ImageSearcher.Toolbar.Title</item>
    </style>

    <!--  툴바 좌상단 NavigationButton 스타일 -->
    <style name="Widget.ImageSearcher.Toolbar.NavigationButton" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:scaleType">center</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_gravity">start|bottom</item>
    </style>

    <style name="Widget.ImagerSearcher.Toolbar.ImageButton" parent="">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:background">@drawable/bt_transparent_circle</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">center</item>
    </style>
</resources>