<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="com.kakakobank.imagecollector.ui.search.SearchItem.ContentsItem" />

        <variable
            name="viewModel"
            type="com.kakakobank.imagecollector.ui.search.SearchViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{_->viewModel.onClickContents(item)}"
        >

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/thumbnail"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/type_icon"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/grey_e6"
            app:cardCornerRadius="14dp"
            app:strokeColor="@color/grey_e6"
            app:strokeWidth="1dp"
            app:cardElevation="0dp"
            >
            <ImageView
                android:id="@+id/thumbnail_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                glideUrl="@{item.contents.thumbnail}"
                />
        </com.google.android.material.card.MaterialCardView>

        <!-- 터치 후 데이터 처리가 완료된 다음 이미지가 변경되야 하므로 CheckBox 대신 ImageButton 사용 -->
        <!-- 터치 영역, 이펙트 고려하여 사이즈 조정 -->
        <ImageButton
            android:id="@+id/favorite_button"
            android:layout_width="26dp"
            android:layout_height="26dp"
            app:layout_constraintTop_toTopOf="@id/thumbnail"
            app:layout_constraintRight_toRightOf="@id/thumbnail"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:padding="2dp"
            android:background="@drawable/bt_transparent_circle"
            android:src="@{item.isFavorite ? @drawable/icon_like_on : @drawable/icon_like_off}"
            android:onClick="@{_->viewModel.onClickFavorite(item)}"
            />

        <ImageView
            android:id="@+id/type_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="@id/thumbnail"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintRight_toLeftOf="@id/title"
            app:layout_constraintLeft_toRightOf="@id/thumbnail"
            android:layout_marginEnd="4dp"
            android:src="@{item.contents.type.iconResId}"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/thumbnail"
            app:layout_constraintLeft_toRightOf="@id/type_icon"
            app:layout_constraintRight_toLeftOf="@id/category"
            android:layout_marginEnd="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.ImageCollector.Head"
            android:text="@{item.contents.title}"
            />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/thumbnail"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintLeft_toRightOf="@id/title"
            app:layout_constraintRight_toRightOf="parent"
            android:textAppearance="@style/TextAppearance.ImageCollector.Category"
            android:text="@{item.contents.category}"
            />

        <TextView
            android:id="@+id/contents_url"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintBottom_toTopOf="@id/datetime"
            app:layout_constraintLeft_toLeftOf="@id/type_icon"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.ImageCollector.Body"
            android:text="@{item.contents.contentsUrl}"
            />

        <TextView
            android:id="@+id/datetime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/contents_url"
            app:layout_constraintBottom_toBottomOf="@id/thumbnail"
            app:layout_constraintLeft_toLeftOf="@id/type_icon"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.ImageCollector.DateTime.Search"
            time="@{item.contents.dateTime}"
            dateFormat="@{@string/date_format_search}"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>