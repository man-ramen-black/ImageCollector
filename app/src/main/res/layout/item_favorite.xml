<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="com.black.imagesearcher.ui.main.favorite.FavoriteItem" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="7.5dp"
        android:paddingRight="7.5dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{_->item.onItemClick.invoke(item.content)}"
        >

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/thumbnail"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/title"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/grey_e6"
            app:cardCornerRadius="14dp"
            app:strokeColor="@color/grey_e6"
            app:strokeWidth="1dp"
            app:cardElevation="0dp"
            >
            <ImageView
                android:id="@+id/thumbnail_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                glideUrl="@{item.content.thumbnail}"
                />
        </com.google.android.material.card.MaterialCardView>

        <!-- 터치 영역, 이펙트 고려하여 사이즈 조정 -->
        <ImageButton
            android:id="@+id/favorite_button"
            android:layout_width="26dp"
            android:layout_height="26dp"
            app:layout_constraintTop_toTopOf="@id/thumbnail"
            app:layout_constraintRight_toRightOf="@id/thumbnail"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:padding="2dp"
            android:background="@drawable/bt_transparent_circle"
            android:src="@drawable/icon_like_on"
            android:onClick="@{_->item.onClickFavorite.invoke(item.content)}"
            />

        <ImageView
            android:id="@+id/type_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="@id/title"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintLeft_toLeftOf="@id/thumbnail"
            app:layout_constraintRight_toLeftOf="@id/title"
            android:layout_marginEnd="4dp"
            android:src="@{item.content.type.iconResId}"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/thumbnail"
            app:layout_constraintBottom_toTopOf="@id/datetime"
            app:layout_constraintLeft_toRightOf="@id/type_icon"
            app:layout_constraintRight_toRightOf="@id/thumbnail"
            android:layout_marginEnd="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.ImageSearcher.Head"
            android:text="@{item.content.title}"
            />

        <TextView
            android:id="@+id/datetime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/thumbnail"
            app:layout_constraintRight_toRightOf="@id/thumbnail"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.ImageSearcher.DateTime.Favorite"
            time="@{item.content.dateTime}"
            dateFormat="@{@string/date_format_favorite}"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>